{
  "name": "yaci-hydra",
  "version": "1.0.0",
  "description": "Payment channel application using Yaci DevKit and Hydra Head Protocol",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prerequisites": "bash scripts/utils/check-prerequisites.sh",
    "setup": "bash scripts/utils/setup-directories.sh && bash scripts/utils/download-hydra.sh",
    "keys:generate": "bash scripts/generator-keys.sh",
    "wallets:fund": "bash scripts/fund-address.sh",
    "hydra:start": "bash scripts/start-hydra.sh",
    "hydra:stop": "bash scripts/stop-hydra.sh",
    "reset": "bash scripts/reset-all.sh",
    "example:status": "node examples/check-yaci.js",
    "example:addresses": "node examples/generate-addresses.js",
    "example:fund": "node examples/fund-from-faucet.js",
    "example:open": "node examples/open-hydra-head.js",
    "example:workflow": "node examples/08-full-workflow.js",
