  "license": "MIT",
  "dependencies": {
    "@lucid-evolution/lucid": "^0.3.0",
    "@lucid-evolution/provider": "^0.1.0",
    "axios": "^1.6.0",
    "ws": "^8.16.0",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
